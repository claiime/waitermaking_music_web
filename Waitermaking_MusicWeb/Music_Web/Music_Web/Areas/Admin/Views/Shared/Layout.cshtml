<!-- -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Quản trị website</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontAwesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Areas/Admin/Content/AdminCss.css" rel="stylesheet" />
</head>
<body>
    <style>
        #pageL a {
            color: darkblue;
        }
    </style>
    <nav class="navbar navbar-default navbar-fixed-top topbar" id="menungang">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="#" class="navbar-brand">
                    <span class="visible-xs">TL</span>
                    <span class="hidden-xs">@Session["fullname"]</span>
                </a>
                <p class="navbar-text">
                    <a href="#" onclick="location.click()" class="sidebar-toggle">
                        <i class="fa fa-bars"></i>
                    </a>
                </p>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapse-main">
                <ul class="nav navbar-nav navbar-right">

                    <li>
                        <button class="navbar-btn">
                            <i class="fa fa-bell"></i>
                        </button>
                    </li>

                    <li class="dropdown">
                        <button class="navbar-btn" data-toggle="dropdown">
                            <img style="cursor:pointer" src="@Session["avatar"]" class="img-circle" width="50" height="50" />

                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="~/Home/Index">Trang chủ</a></li>
                            <li><a href="#">Tài khoản</a></li>
                            <li class="nav-divider"></li>
                            <li><a href="/Admin/Home/Logout">Thoát</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <article class="wrapper">

        <aside class="sidebar">
            <ul class="sidebar-nav">
                <li class="active"><a href="/Admin/Home" data-target-id="tab"><i class="fa fa-home" aria-hidden="true"></i><span>Trang chủ</span></a></li>
                <li><a href="/Admin/WebUsers" data-target-id="tab"><i class="fa fa-users"></i><span>Thành viên</span></a></li>
                 <li><a href="/Admin/WebSong/GetContainsInFolderRootMusic" data-target-id="tab"><i class="fa fa-newspaper-o"></i><span>Danh sách nhạc gốc</span></a></li>
                 <li><a href="/Admin/WebSong/GetContainsInFolderWaitermak" data-target-id="tab"><i class="fa fa-file-text-o"></i><span>Danh sách nhạc đã waitermak(demo)</span></a></li>
                <li><a href="/Admin/WebBusinesses" data-target-id="tab"><i class="fa fa-cogs"></i><span>Danh sách quyền</span></a></li>

            </ul>
        </aside>
        <div class="main" style="min-height:600px;">
            @RenderBody()
        </div>
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - Web Waitermaking</p>
        </footer>
    </article>
    <script>
    //thiet lap thoi gian request
    window.setInterval(function () {
        $.get("/Admin/Home/Alive",function(data){
        //alert("Phiên làm việc còn sống");
    });
    }, 180000);//3phut

    </script>
    <script>
        $(document).on("click", ".sidebar-toggle", function () {
            $(".wrapper").toggleClass("toggled");
        });
    </script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

