
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Demo web waitermaking</title>

    <link href="~/Content/fontAwesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Areas/Admin/Content/AdminCss.css" rel="stylesheet" />
    
</head>
<body>

    <div class="container">
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="navad">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <form class="navbar-form navbar-left" method="GET" role="search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                </form>

                <ul class="nav navbar-nav navbar-right">
                    <li><img src="@Session["avatar"]" class="img-circle" width="50" height="50" /></li>
                   
                     <li><a href="#" target="_blank">Visit Site</a></li>
                    <li class="dropdown ">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">
                          <!-- @Session["fullname"] --> 
                            <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">SETTINGS</li>
                            <li class=""><a href="#">Other Link</a></li>
                            <li class=""><a href="#">Other Link</a></li>
                            <li class=""><a href="#">Other Link</a></li>
                            <li class="divider"></li>
                            <li><a href="/Admin/Home/Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div><!-- /.navbar-collapse -->
        <!-- /.container-fluid -->
        <div class="row">
            <div class="listad">
                <div class="col-md-3">
                    <ul class="nav nav-pills nav-stacked admin-menu">
                        <li><img src="@Session["avatar"]" class="img-circle" alt="User Image" width="50" height="50" /></li>
                        <li><p style="color:white;">@Session["username"]</p></li>                         
                        <li class="active"><a href="/Admin/Home" data-target-id="home"><i class="fa fa-home fa-fw"></i>Home</a></li>
                        <li><a href="#" data-target-id="widgets"><i class="fa fa-list-alt fa-fw"></i>Danh mục sản phẩm</a></li>
                        <li><a href="/Admin/WebProducts" data-target-id="pages"><i class="fa fa-file-o fa-fw"></i>Sản Phẩm</a></li>
                        <li><a href="/Admin/WebUsers" data-target-id="charts"><i class="fa fa-bar-chart-o fa-fw"></i>Thành viên</a></li>
                        <li><a href="/Admin/WebManagerFiles" data-target-id="table"><i class="fa fa-table fa-fw"></i>Danh mục bài viết</a></li>
                        <li><a href="#" data-target-id="forms"><i class="fa fa-tasks fa-fw"></i>Bài viết</a></li>
                        <li><a href="/Admin/WebPermissions" data-target-id="library"><i class="fa fa-book fa-fw"></i>Mô ta chức năng</a></li>
                        <li><a href="/Admin/WebGrantPermissions" data-target-id="applications"><i class="fa fa-pencil fa-fw"></i>Phân quyền</a></li>
                        <li><a href="#" data-target-id="settings"><i class="fa fa-cogs fa-fw"></i>Settings</a></li>

                    </ul>
                </div>
            </div>
            <div class="col-md-9 well admin-content" id="home">
                @RenderBody()
            </div>

        </div>
    </div>

    <div class="container body-content">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Web waitermaking</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Content/AdminScript.js"></script>
  <script>
        $(document).on("click", ".sidebar-toggle", function () {
            $(".wrapper").toggleClass("toggled");
        });
  </script>
</body>
</html>
