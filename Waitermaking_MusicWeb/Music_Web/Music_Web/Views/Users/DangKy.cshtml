@model Music_Web.Areas.Admin.Models.DataModel.WebUser

@{
    ViewBag.Title = "DangKy";
}
<link href="~/Content/MemberCss.css" rel="stylesheet" />
<div class="row">

    <span class="text-danger">@ViewBag.LoiDangKy </span>
</div>
<style>
    #textdk{
        color:white;
        font-size:19px;
        font-weight:bold

           
    }
    #agree{
        color:white;
        font-weight:bold
       
    }
    .form-group{
        margin-top:10px
        
    }
    .form-control{
        height:45px
    }
    #agree{
        padding:8px,8px;
        margin-left:350px;
        background: #000000;
         float: right;
        padding: 7px 35px;
        border-radius: 60px;
        display: inline-block;
        color: white;
        font-size: 18px;
        cursor: pointer;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.06),
                  0 2px 10px 0 rgba(0,0,0,0.07);
        -webkit-transition: all 300ms ease;
        transition: all 300ms ease;
    }
    #agree:hover{
    transform: translateY(1px);
    box-shadow: 0 1px 1px 0 rgba(0,0,0,0.10),
              0 1px 1px 0 rgba(0,0,0,0.09);
}
    .form-control{
        font-size:16px;
        width:500px
       
    }
    input[type=checkbox] {
        transform: scale(1.5);
        
}
       
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-2"></div>
    <div class="col-md-9"style="background: rgba(0, 0, 0,0.6) ;margin-top:30px;margin-bottom:40px">
        <div class="col-md-7" style="padding-left:90px">
            <div class="row myborder">
                <h4 style="margin-top:30px; margin-bottom: 10px;width:100%" id="textdk">Điền thông tin sau:</h4>

                <hr />
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "text-left col-md-5", @id = "textdk" })
                        <div class="col-md-7">

                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "text-left col-md-5", @id = "textdk" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "text-left col-md-5", @id = "textdk" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "text-left col-md-5", @id = "textdk" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "text-left col-md-5", @id = "textdk" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group ">
                        <label class="text-left col-md-5" id="textdk">Nhập lại MK</label>
                        <div class="col-sm-7">
                            <input class="form-control" type="password" id="nhaplaiPass" value="">

                            <span id="loiPass" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <span class="button-checkbox">
                                @Html.CheckBoxFor(model => model.Allowed, htmlAttributes: new { id = "checkAgree" })
                                @Html.Label("  Đồng ý điều khoản",htmlAttributes: new { id = "textdk" })
                            </span>
                        </div>
                        <div class="col-md-offset-5 col-md-4" id="buttontao">
                            <input type="submit" value="Tạo" id="agree" onclick="return functionheck()" class="btn btn-group" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    


}
<script type="text/javascript">
    function functionheck() {
        if ($('input[type="checkbox"]').prop("checked") == true) {

            return true;
        }
        else if ($('input[type="checkbox"]').prop("checked") == false) {
            alert("Bạn cẩn phải đồng ý điều khoản.");
            return false;
        }
    }
   
</script>
<!--bat loi đong y dieu khoan-->
<script type="text/javascript">
    $(document).ready(function(){
        $('#agree').click(function(){
            if ($('#Password').val() != $('#nhaplaiPass').val()) {
                $('#loiPass').text('Mật khẩu không khớp')
                $('#Password').focus();
                return false;
            }
        });
    });
</script>